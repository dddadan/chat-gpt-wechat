.search {
  /* Search */
  position: absolute;
  left: 5%;
  width: 90%;
  bottom: 40rpx;
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.16);
  border-radius: 12px;
  /* 自动布局 */
  padding-left: 12px;
  padding-right: 12px;
  color: white;
  justify-content: start;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  height: 80rpx;
  min-height: 80rpx;
  justify-content: space-between;
}

.cuIcon-search {
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 33rpx;
}

.cuIcon-close {
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  font-size: 33rpx;
}

.search-input {
  height: 80rpx;
  width: 100%;
}

.placeholder {
  color: rgba(255, 255, 255, 0.8);
}

.cu-item {
  border-bottom: 1px solid rgba(150, 150, 150, 0.1);
}