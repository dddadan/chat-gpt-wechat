  position: absolute;
  width: 100%;
  height: 420rpx;
  left: 0;
  right: 0;
  top: 0;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.body {
  margin-top: 420rpx;
}

.light {
  position: absolute;
  width: 116px;
  height: 116px;
  left: -44px;
  right: 303px;
  top: -58px;
  bottom: 120px;
  background: rgba(255, 255, 255, 0.5);
  filter: blur(48px);
}

.user {
  /* Chats */
  position: absolute;
  width: 63.07px;
  height: 30px;
  left: 24px;
  right: 287.93px;
  top: 180rpx;
  bottom: 722px;
  /* Heading/Bold 24 */
